
#include<stdio.h>

int main()
{
  
  char str[20];
  int len;
  
  
  printf("Enter a string: ");
  scanf("%[^\n]",str);
  
  
  for (len = 0; str[len]!='\0'; len++);

  
  for(int i=0; i<len; i++)
  {
    for(int j=0; j<len-i-1; j++)
    {
      printf(" "); 
    }
    for(int j=0; j<=i; j++)
    {
      printf("%c", str[j]); 
    }

    printf("\n"); 
  }
  return 0;
}
